<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_nian"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="2016-04"
        android:textColor="@color/black"
        android:background="@color/invest_outer_gray"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:padding="12dp"
        />
    <include layout="@layout/include_linearlayout_left_space_view"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/txt_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 24.0.0 0"

            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/home_line"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/txt_cong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textSize="12sp"
            android:textColor="@color/home_line"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/txt_meny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+8000"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:layout_weight="1"
            android:gravity="center"

            />

    </LinearLayout>
    <include layout="@layout/include_linearlayout_left_space_view"></include>


</LinearLayout>