<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/r_x_bao"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_prod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="融信宝"
                android:maxEms="5"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/y_x_b"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_prod2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_prod"
                android:layout_centerVertical="true"
                android:textColor="@color/y_x_b"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/text_prod3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_prod2"
                android:layout_centerVertical="true"
                android:textColor="@color/y_x_b"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/lilay_redpag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                >
            </LinearLayout>



        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_below="@+id/text_yea"
            android:background="@color/gray"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text_yea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="预期年化收益"
                android:textColor="@color/textcolor3"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:text="11"
                    android:textColor="@color/y_x_b"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/text_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/text_per"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/text_per"
                    android:textSize="25sp"
                    android:textColor="@color/y_x_b"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/text_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="封闭期"
                    android:textColor="@color/textcolor3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tet_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_mon"
                    android:text="12"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/y_x_b"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/relativeLayout">

                <TextView

                    android:id="@+id/text_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="可投金额"
                    android:textColor="@color/textcolor3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_men"
                    android:layout_toLeftOf="@+id/text_monnn"
                    android:text="50.66"
                    android:textColor="@color/y_x_b"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_monnn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/text_men"
                    android:text="万"
                    android:textColor="@color/y_x_b"
                    android:textSize="18sp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>