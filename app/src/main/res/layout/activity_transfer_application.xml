                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/base_line_padding"
                        android:paddingTop="@dimen/base_line_padding"
                        android:text="元"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/text_content_size" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:id="@+id/tv_Transfer_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/Transfer_fee"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fee_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/base_line_padding"
                        android:paddingTop="@dimen/base_line_padding"
                        android:text="20000"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_content_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/base_line_padding"
                        android:paddingTop="@dimen/base_line_padding"
                        android:text="元"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/text_content_size" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/Expected_return"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
