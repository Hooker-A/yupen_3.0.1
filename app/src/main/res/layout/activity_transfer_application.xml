<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        android:background="@drawable/vpi__tab_unselected_holo"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:id="@+id/ll_head_image"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|left">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:background="@null"
                android:onClick="back"
                android:text="@string/cancel"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <TextView
                android:id="@+id/TXT_APP_TITLE"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/zezq"
                android:textColor="@color/black"
                android:textSize="@dimen/small_title_size" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashed_height"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:text="@string/Application_for_transfer"
        android:onClick="applicationTransfer"
        android:textColor="@color/white"
        android:textSize="@dimen/ordinary_text_content_size" />

    <com.huaop2p.yqs.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_bottom"
        android:layout_below="@+id/ll_top"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/line_10px"
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/product_name2"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="余信宝"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_content_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/investment_quota"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <TextView
                    android:id="@+id/tv_InvestmentMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="20000元"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_content_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/percentages"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <TextView
                    android:id="@+id/tv_YearRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="11%"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/text_content_size" />
            </RelativeLayout>

            <RelativeLayout
