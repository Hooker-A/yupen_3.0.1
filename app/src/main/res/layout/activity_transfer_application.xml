                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/listview_driver_color" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/user_head_height"
                        android:layout_marginLeft="@dimen/base_line_padding"
                        android:layout_marginRight="@dimen/base_line_padding"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/base_line_padding"
                            android:paddingTop="@dimen/base_line_padding"
                            android:text="@string/Date_of_interest"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/text_content_size" />

                        <TextView
                            android:id="@+id/tv_qixi_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="@dimen/base_line_padding"
                            android:paddingTop="@dimen/base_line_padding"
                            android:text="2012-1-1"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/text_content_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:background="@color/listview_driver_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/user_head_height"
                        android:layout_marginLeft="@dimen/base_line_padding"
                        android:layout_marginRight="@dimen/base_line_padding"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/base_line_padding"
                            android:paddingTop="@dimen/base_line_padding"
                            android:text="@string/due_time"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/text_content_size" />

                        <TextView
                            android:id="@+id/tv_maturities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="@dimen/base_line_padding"
                            android:paddingTop="@dimen/base_line_padding"
                            android:text="2012-1-1"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/text_content_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:background="@color/listview_driver_color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/user_head_height"
                        android:layout_marginLeft="@dimen/base_line_padding"
                        android:layout_marginRight="@dimen/base_line_padding"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/base_line_padding"
                            android:paddingTop="@dimen/base_line_padding"
                            android:text="@string/investment_time"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/text_content_size" />

                        <TextView
                            android:id="@+id/tv_investment_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="@dimen/base_line_padding"
                            android:paddingTop="@dimen/base_line_padding"
                            android:text="2012-1-1"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/text_content_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:background="@color/listview_driver_color" />
                    </RelativeLayout>
                </LinearLayout>

            </com.huaop2p.yqs.widget.FoldGroupView>

            <include
                layout="@layout/line_10px"
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/hohelp_btn"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/transfer_mode2"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_line_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_bg"
                        android:paddingBottom="@dimen/base_line_padding"
                        android:paddingTop="@dimen/base_line_padding"
                        android:text="@string/sszr"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_content_size" />

                    <RadioButton
                        android:id="@+id/rb_jiaji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/base_line_padding"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_bg"
                        android:paddingBottom="@dimen/base_line_padding"
                        android:paddingTop="@dimen/base_line_padding"
                        android:text="@string/jjzr"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/text_content_size" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/hohelp_btn"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/Total_transfer_amount"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/base_line_padding"
                        android:paddingTop="@dimen/base_line_padding"
                        android:text="20000+19999"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_content_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/base_line_padding"
                        android:paddingTop="@dimen/base_line_padding"
                        android:text="元"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/text_content_size" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_discount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/hohelp_btn"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/h_r_income4"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="reduce"
                        android:src="@drawable/reduce" />

                    <EditText
                        android:id="@+id/et_value"
                        android:layout_width="@dimen/dashed_height"
                        android:text="0"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/ordinary_text_content_size"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:padding="@dimen/base_line_padding" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="add"
                        android:src="@drawable/add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/base_line_padding"
                        android:paddingTop="@dimen/base_line_padding"
                        android:text="%"
                        android:textColor="@color/textcolor2"
                        android:textSize="@dimen/small_title_size" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_discount_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/make_profit"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_zr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/base_line_padding"
                        android:paddingTop="@dimen/base_line_padding"
