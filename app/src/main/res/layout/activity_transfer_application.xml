                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/Generate_income"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <TextView
                    android:id="@+id/tv_gains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="110元"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_head_height"
                android:layout_marginLeft="@dimen/base_line_padding"
                android:layout_marginRight="@dimen/base_line_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/listview_driver_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="@string/residual_maturity"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />

                <TextView
                    android:id="@+id/tv_remaining_maturity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/base_line_padding"
                    android:paddingTop="@dimen/base_line_padding"
                    android:text="20天"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_content_size" />
            </RelativeLayout>

            <include
                layout="@layout/line_10px"
                android:layout_width="match_parent"
                android:layout_height="5px" />

            <com.huaop2p.yqs.widget.FoldGroupView
                android:id="@+id/mfgv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
