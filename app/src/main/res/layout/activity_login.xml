<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/includeTitle"
        layout="@layout/app_titl"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    >
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center|left"
    android:layout_marginLeft="30dp"
    android:background="@drawable/edit_border_bg"
    >


    <com.huaop2p.yqs.module.base.view.ClearEditText
        android:id="@+id/txt_LoginName"
        style="@style/clear_edit"
        android:layout_width="200dp"
        android:drawableLeft="@drawable/shouji001"
        android:hint="请输入您的手机号码"
        android:textSize="13sp"
        android:textColorHint="@color/hintcoler"
        android:inputType="number"
        android:maxLength="11"
        />
    <Button
        android:id="@+id/btn_button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:textSize="13sp"
        android:background="@drawable/red_button"
        android:text="获取验证码"
        android:textColor="@color/white"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"

        >
        <com.huaop2p.yqs.module.base.view.ClearEditText
            android:id="@+id/txt_Code"
            style="@style/clear_edit_com_style"
            android:drawableLeft="@drawable/zhuce001"
            android:hint="请输入短信验证码"
            android:inputType="number"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        >
    <com.huaop2p.yqs.module.base.view.ClearEditText
        android:id="@+id/txt_OnePass"
        style="@style/clear_edit_com_style"
        android:drawableLeft="@drawable/mima001"
        android:hint="请设置您的登录密码"
        android:password="true"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        >
    <com.huaop2p.yqs.module.base.view.ClearEditText
        android:id="@+id/txt_TowPass"
        style="@style/clear_edit_com_style"
        android:drawableLeft="@drawable/mima001"
        android:hint="请再次输入您的登录密码"
        android:password="true"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_login"
            android:background="@drawable/huise_button"
            android:clickable="false"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="@string/str_register" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即代表同意"
                />
            <TextView
                android:id="@+id/text_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_app_soft_use_protical"
                android:textColor="@color/y_f_b"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>





</LinearLayout>