<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include
        android:id="@+id/includeTitle"
        layout="@layout/app_titl"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dl_beijj"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:gravity="center"
            >


        <com.huaop2p.yqs.module.base.view.ClearEditText
            android:id="@+id/txtLoginName"
            style="@style/clear_edit_com_style"
            android:drawableLeft="@drawable/shouji001"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:maxLength="11"

            />
        <com.huaop2p.yqs.module.base.view.ClearEditText
            android:id="@+id/txtLoginPass"
            style="@style/clear_edit_com_style"
            android:drawableLeft="@drawable/mima001"
            android:hint="请输入您的登录密码"
            android:password="true"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btn_login"
                style="@style/btn_nextT"
                android:layout_margin="10dp"
                android:background="@drawable/huise_button"
                android:clickable="false"
                android:textColor="@color/white"
                android:text="登  录" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/txt_logon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/red"
                android:text="快速注册"
                android:singleLine="false"
                />
            <View
                android:layout_width="1dp"
                android:background="@color/huise"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_height="13dp"/>
            <TextView
                android:id="@+id/txt_wpass"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="忘记密码"
                android:textColor="@color/hintcoler"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>
    </LinearLayout>
    </LinearLayout>



</LinearLayout>