<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listview_driver_color"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190px"
        android:layout_marginLeft="@dimen/base_line_padding"
        android:layout_marginRight="@dimen/base_line_padding"
        android:layout_marginTop="@dimen/base_activity_margin"
        android:background="@drawable/hoproductcell_bg"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:layout_marginBottom="@dimen/base_activity_margin"
            android:layout_marginLeft="@dimen/base_line_padding"
            android:layout_marginRight="@dimen/base_line_padding"
            android:background="@drawable/vpi__tab_unselected_holo"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/base_text_padding"
            android:paddingRight="@dimen/base_text_padding">

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <com.huaop2p.yqs.widget.MyTextView
                android:id="@+id/tv_mtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px5"
                android:text="@string/jie"
                android:textColor="@color/white"
                android:textSize="@dimen/small_content_size" />

            <TextView
                android:id="@+id/tv_LoanName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/ordinary_text_content_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_list"
                android:layout_width="0dp"
                android:layout_height="120px"
                android:layout_weight="3"
                android:orientation="horizontal">



            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/iv_state"
                    android:layout_width="@dimen/my_wealth_button_weight"
                    android:layout_height="60px"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/base_line_padding"
                    android:background="@drawable/rounded_rectangle_red"
                    android:gravity="center"
                    android:text="@string/look"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ordinary_text_content_size" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
