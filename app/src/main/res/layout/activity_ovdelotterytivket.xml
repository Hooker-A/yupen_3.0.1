<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linlayout_redpag"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/jiaxiover"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">

            <TextView
                android:id="@+id/textview_￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:text="1.0"
                android:textColor="#FFF0BB"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_redmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/textview_￥"
                android:text="%"
                android:textColor="#FFF0BB"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_red_lastday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="还有20天过期"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">

            <TextView
                android:id="@+id/tv_red_dixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:text="加息券"
                android:textColor="#FFF0BB"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_dixianred_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/tv_red_dixian"
                android:src="@drawable/fanxian_red_point"/>

            <TextView
                android:id="@+id/tv_ben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_dixianred_point"
                android:layout_below="@+id/tv_red_dixian"
                android:layout_marginLeft="5dp"
                android:text="投资时附加预期年化收益率"
                android:textColor="#FFF0BB"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/image_dixianred_point2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/tv_red_dixian"
                android:src="@drawable/fanxian_red_point"/>

            <TextView
                android:id="@+id/tv_red_manmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_ben"
                android:layout_toRightOf="@+id/image_dixianred_point2"
                android:layout_marginLeft="5dp"
                android:text="满500可用"
                android:textColor="#FFF0BB"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_red_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="96dp"
                android:text="有效期至2016-08-08"
                android:textColor="#D5D4D0"
                android:textSize="10sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>