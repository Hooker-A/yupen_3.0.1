<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    >

    <RelativeLayout
        android:id="@+id/red_pop"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/cove"

        >
        <Button
            android:id="@+id/btn_guan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="75dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/text_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/orync"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/btn_see"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="39dp"
                android:layout_marginEnd="39dp"
                android:background="@drawable/check11"
                />
            <Button
                android:id="@+id/btn_yaoy"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/rock"
                />


        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/containerr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</RelativeLayout>