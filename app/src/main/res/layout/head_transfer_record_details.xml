<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        layout="@layout/activity_investment_details_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginLeft="@dimen/base_line_padding"
        android:layout_marginRight="@dimen/base_line_padding"
        android:background="@drawable/vpi__tab_unselected_holo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashed_height"
        android:layout_margin="@dimen/base_line_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transfer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线转让"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_mode"
                android:textColor="@color/textcolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_DropRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.2%"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/h_r_income3"
                android:textColor="@color/textcolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_AccrualMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本金x1%"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fee"
                android:textColor="@color/textcolor" />
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/line_10px"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/base_line_padding"
        android:layout_marginRight="@dimen/base_line_padding"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/base_line_padding"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/investment_time"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_content_size"
            />
        <TextView
            android:id="@+id/tv_BuyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1021-1-1-1"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_content_size"
            />
    </LinearLayout>
    <include
        layout="@layout/line_10px"
        android:layout_width="match_parent"
        android:layout_height="10px" />
</LinearLayout>
