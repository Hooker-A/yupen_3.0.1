<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listview_driver_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/base_line_padding"
        android:background="@color/qian_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashed_height"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_line_padding"
            android:text="@string/str_recharge_num2"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/ordinary_text_content_size" />

        <TextView
            android:id="@+id/tv_recharge_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/base_line_padding"
            android:textColor="@color/red"
            android:textSize="@dimen/ordinary_text_content_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qian_grey" />

    <LinearLayout
        android:id="@+id/ll_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/listview_driver_color"
        android:padding="@dimen/base_line_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大写"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/ordinary_text_content_size" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/ordinary_text_content_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/base_line_padding"
        android:background="@color/qian_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dashed_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_line_padding"
            android:text="@string/yue2"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/ordinary_text_content_size" />

        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/base_line_padding"
            android:textColor="@color/red"
            android:textSize="@dimen/ordinary_text_content_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qian_grey" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashed_height"
        android:layout_margin="@dimen/px50"
        android:background="@drawable/rounded_rectangle_red"
        android:text="继续投资"
        android:textSize="@dimen/ordinary_text_content_size"
        android:onClick="continuedInvestment"
        android:textColor="@color/white" />
</LinearLayout>
