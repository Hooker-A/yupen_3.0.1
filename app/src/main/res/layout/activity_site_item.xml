<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_listitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/withe"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_siet_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="王子轩"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_siet_iphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="13718132104"
                android:textColor="@color/black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white">

            <TextView
                android:id="@+id/txt_siet_adds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:text="北京市朝阳区望京保利国际广藏 是什么你再喊什么你咋你吃饭了吗"
                android:textColor="@color/ipone_num_color" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/huise"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_siet_mo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="visible"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="5dp"
                    android:button="@null"
                    android:background="@drawable/cheick_button"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/txt_mo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="设为默认"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/txt_mo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lil_siet_bianji"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_bianji"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:padding="5dp"
                        android:background="@drawable/shbianji"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lil_siet_delet"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/txt_sanchu"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:gravity="center"
                        android:background="@drawable/shsanchu"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>





</LinearLayout>