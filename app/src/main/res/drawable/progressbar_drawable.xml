<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.0dip" />
            <gradient android:startColor="#f6f6f6"
                android:centerColor="#f6f6f6"
                android:endColor="#f6f6f6" android:angle="270.0" android:centerY="2.0"  />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.0dip" />
                <gradient android:startColor="#FF494B"
                    android:centerColor="#FF494B"
                    android:endColor="#FF494B"
                    android:angle="270.0" android:centerY="2.0"  />
            </shape>
        </clip>
    </item>

</layer-list>